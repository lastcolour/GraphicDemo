{
  "name": "FreeGLUT",

  "build_types": ["Debug", "Release"],
  "bin_types": ["shared_lib", "static_lib"],

  "cmake": {
    "run_dir": "extern/libs/freeglut-3.0.0",
    "out_dir": "_build/{PLATFORM}/{BUILD_TYPE}/extern/freeglut-3.0.0",
    "debug": {
      "defs": [
        {"CMAKE_BUILD_TYPE": "Debug"}
      ],
      "env": []
    },

    "release": {
      "defs": [
        {"CMAKE_BUILD_TYPE": "Release"}
      ],
      "env": []
    },

    "common": {
      "defs": [],
      "env": []
    }
  },

  "build": {
  },

  "cleanUp": {

  },

  "install": {
    "groups": [
      {
        "name": "Binaries",
        "files": "bins/{BUILD_TYPE}/freeglut.*",
        "to": "{OUT_DIR}"
      },
      {
        "name": "Libs",
        "files": "libs/{BUILD_TYPE}/freeglut*.*",
        "from": "",
        "to": "{OUT_DIR}"
      }
    ]
  }
}