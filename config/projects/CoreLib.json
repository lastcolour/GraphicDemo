{
  "name": "CoreLib",

  "build_types": ["Debug", "Release"],
  "bin_types": ["shared_lib", "static_lib"],

  "deps": [
     {
       "project": "GLFW.json",
       "link": "shared",
       "type": "Release",
       "install": {
         "path": "{OUT_DIR}/{PLATFORM}/{BUILD_TYPE}"
       }},
     {
      "project": "GLEW.json",
      "link": "shared",
      "type": "Release",
      "install": {
        "path": "{OUT_DIR}/{PLATFORM}/{BUILD_TYPE}"
      }}
  ],

  "cmake": {
    "run_dir": "libs/core",
    "out_dir": "_build/{PLATFORM}/{BUILD_TYPE}/libs/core",
    "debug": {
      "defs": [
        {"CMAKE_BUILD_TYPE": "Debug"}
      ],
      "env": []
    },

    "release": {
      "defs": [
        {"CMAKE_BUILD_TYPE": "Release"}
      ],
      "env": []
    },

    "common": {
      "defs": [{"CMAKE_CXX_STANDARD": "11"}],
      "env": []
    }
  },

  "build": {
  },

  "cleanUp": {

  },

  "install": {
  }
}
